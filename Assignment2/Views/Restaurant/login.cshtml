@{
    ViewData["Title"] = "Restaurant_login";
}

<p>Velkommen restaurantens side</p>

<p>Login for at tilgå de forskellige funktioner</p>

<div>
    <div>
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Brugernavn:"></label>
                <input asp-for="Brugernavn" />*
                <span asp-validation-for="Brugernavn" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password"></label>
                <input asp-for="Password" />*
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Login" id="myLogin" class="button" /> &nbsp;&nbsp;
                <a asp-action="Index" asp-controller="Home" class="button">Cancel</a>
            </div>
        </form>
    </div>
</div>